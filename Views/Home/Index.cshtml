@model List<HomeTeamViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-primary mb-3" style="width:auto" asp-action="Create" asp-controller="Team">Add new team</a>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Index" asp-controller="Team">View all teams</a>

    <form asp-controller="Home" asp-action="SimulatePoule" method="post" class="mt-3">

        <div class="card mb-3">
            <div class="card-header">
                <h2>Add teams to your poule to begin</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].Name
                        </label>
                    </div>
                }
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Simulate poule</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Reset</a>
            </div>
        </div>
    </form>
}
else
{
    <div class="card">
        <div class="card-header">
            No Teams yet
        </div>
    </div>
}