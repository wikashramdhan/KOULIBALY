@model EditTeamViewModel

@{
    ViewData["Title"] = "Edit Team";
}

<h1>Edit Team</h1>

<form asp-controller="Team" asp-action="Edit" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Strength" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Strength" class="form-control" />
            <span asp-validation-for="Strength" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" asp-controller="Team" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>